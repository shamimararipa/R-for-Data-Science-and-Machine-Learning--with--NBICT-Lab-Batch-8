ggplot(dataset, aes(x = weight))+
geom_histogram(aes(y = after_stat(density)), color = 'black', fill = "white")+
geom_density(fill = "blue")
# Histogram with density plot
ggplot(dataset, aes(x = weight))+
geom_histogram(aes(y = after_stat(density)), color = 'black', fill = "white")+
geom_density(fill = "blue", alpha = .2)
